<form id="messageForm">
    <div class="form-group">
        <label for="text">Texte</label>
        <input type="text" class="form-control" id="text" name="text" required>
    </div>
    <div class="form-group">
        <label for="sequenceNumber">Numéro de Séquence</label>
        <input type="number" class="form-control" id="sequenceNumber" name="sequenceNumber" required>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Ajouter</button>
</form>
<div id="responseMessage" class="mt-3"></div>

<script src="/lib/jquery/dist/jquery.min.js"> </script>

<script>

    $(document).ready(function() {
        $('#messageForm').on('submit', function(event) {
            event.preventDefault();

            
            var messageData = {
                Text: $('#text').val(),
                Timestamp: new Date().toISOString(), // Timestamp actuel
                SequenceNumber: $('#sequenceNumber').val()
            };

            $.ajax({
                url: 'https://localhost:7054/api/AppMessage/add', // Remplacez par l'URL de votre API
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(messageData),
                success: function(response) {
                    $('#responseMessage').html('<div class="alert alert-success">Message ajouté avec succès!</div>');
                    $('#messageForm')[0].reset(); // Réinitialise le formulaire
                },
                error: function() {
                    $('#responseMessage').html('<div class="alert alert-danger">Erreur lors de l\'ajout du message.</div>');
                }
            });
        });
    });
</script>